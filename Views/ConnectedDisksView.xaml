<UserControl x:Class="DiskBenchmark.Views.ConnectedDisksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiskBenchmark.Views"
             xmlns:vm="clr-namespace:DiskBenchmark.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ConnectedDisksViewModel, IsDesignTimeCreatable=True}"
             Style= "{StaticResource Page_Style}">
    <Grid Background="AliceBlue">
       
        <Border Background="#272B2F" CornerRadius="0,0,20,0"/>
        <Grid>
            <ListBox Margin="40" Background="#FF383A40" 
                     Padding="40, 20"  
                     ItemsSource="{Binding TestDisks1}" 
                     BorderBrush="#FF343842"
                     BorderThickness="5"
                     OpacityMask="#FF5D5858"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center">
                <ListBox.Template>
                    <ControlTemplate>
                        <Border BorderBrush="#272B2F" Background="#FF343638" BorderThickness="5" CornerRadius="40">

                            <ItemsPresenter/>
                        </Border>
                    </ControlTemplate>
                </ListBox.Template>

            </ListBox>

          
        </Grid>
    </Grid>
</UserControl>
