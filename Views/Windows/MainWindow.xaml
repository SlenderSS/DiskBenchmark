<Window x:Class="DiskBenchmark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskBenchmark"
        xmlns:cmd="clr-namespace:DiskBenchmark.Infrastructure.Commands"
        xmlns:vm="clr-namespace:DiskBenchmark.ViewModels"
        xmlns:models="clr-namespace:DiskBenchmark.Models"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Height="550"
        Width="900"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
      >
    <Window.Resources>
        <cmd:CloseAppCommand x:Key="CloseAppCommand"/>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="Q" Command="{StaticResource CloseAppCommand}"/>
    </Window.InputBindings>
    <Window.DataContext>
        <vm:MainWIndowViewModel/>
    </Window.DataContext>


    <Grid>
        <Border  CornerRadius="20" Background="#272B2F"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="760*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="700*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="1">
                    <Button Style="{StaticResource ExitApp}"
                            Command="{StaticResource CloseAppCommand}"/>
                </DockPanel>
                
            </Grid>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Grid HorizontalAlignment="Left"
                  Width="228">

                    <Border Background="#272B2F"
                        CornerRadius="20,0,0,20" />

                    <StackPanel Height="400"
                            Width="228">

               
                        <RadioButton Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}">

                            <Grid>
                                <fa:ImageAwesome Icon="InfoCircle" Style="{StaticResource Image_Style}" Foreground="WhiteSmoke"/>
                                <TextBlock Text="Connected disks" Style="{StaticResource Text_Style}" />

                            </Grid>

                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}">

                            <Grid>
                                <fa:ImageAwesome Icon="Tasks" Style="{StaticResource Image_Style}" Foreground="WhiteSmoke"/>
                                <TextBlock Text="Disks information" Style="{StaticResource Text_Style}" />

                            </Grid>

                        </RadioButton>
       
                        <RadioButton Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}">

                            <Grid>
                                <fa:ImageAwesome Icon="Tasks" Style="{StaticResource Image_Style}" Foreground="WhiteSmoke"/>
                                <TextBlock Text="Disks Benchmark" Style="{StaticResource Text_Style}" />

                            </Grid>

                        </RadioButton>



                    </StackPanel>

                </Grid>

                <Grid Grid.Column="1">

                   
                    
                    
                    <ListBox Margin="20,20,20,40" Background="#FF383A40" 
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                ItemsSource="{Binding Disks}" 
                                BorderBrush="#FF343842"
                                BorderThickness="5"
                                OpacityMask="#FF5D5858"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                >
                                 
                        <ListBox.Template>
                            <ControlTemplate >
                                <Border BorderBrush="#272B2F" Background="#FF343638" BorderThickness="5" CornerRadius="40">
                                    <ScrollViewer CanContentScroll="False">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </ListBox.Template>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:Disk" >
                                <Border BorderBrush="Transparent" Background="#FF2D3136" BorderThickness="1" CornerRadius="20" Width="500" Margin="0,25,0,0">
                                    <StackPanel Orientation="Vertical" Margin="20">

                                        <DockPanel>
                                            
                                                <TextBlock DockPanel.Dock="Left" Text="{Binding Caption}" Style="{StaticResource Text_Style2}"/>
                                                <!--<TextBlock Text="{Binding DeviceID}" Style="{StaticResource Text_Style2}"/>-->
                                                <TextBlock DockPanel.Dock="Right" Text="{Binding SerialNumber}" Style="{StaticResource Text_Style2}" />
                                            
                                        </DockPanel>
                                       
                                        <ListBox ItemsSource="{Binding LogicalDisks}" Background="Transparent" BorderBrush="Transparent">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,10,5,10">
                                                        <TextBlock Text="{Binding Caption}" Style="{StaticResource Text_Style}"/>
                                                        <ProgressBar Value="{Binding UsedSpace}" Maximum="{Binding Size}" BorderThickness="2" BorderBrush="Gray" Width="260" Margin="20,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        <TextBlock/>
                                    </StackPanel>
                                    
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>


                    </ListBox>
                    <!--<ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}" Grid.ColumnSpan="2" />-->

                </Grid>

            </Grid>


        </Grid>




    </Grid>
</Window>
