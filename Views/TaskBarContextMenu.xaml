<UserControl x:Class="DiskBenchmark.Views.TaskBarContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cmd="clr-namespace:DiskBenchmark.Infrastructure.Commands"
             xmlns:local="clr-namespace:DiskBenchmark.Views"
             mc:Ignorable="d" 
             Background="{StaticResource Transparent}"
             d:DesignHeight="190" d:DesignWidth="200">
    <UserControl.Resources>
        <cmd:CloseAppCommand x:Key="CloseAppCommand"/>
    </UserControl.Resources>
    <Grid >
        <Border Style="{StaticResource BorderStyle2}" >
            <StackPanel Margin="10,10">
                <Button Content="Home" Style="{StaticResource RoundedButtonTaskBarStyle}" Height="30" Margin="0 7"/>
                <Button Content="Connected disks" Style="{StaticResource RoundedButtonTaskBarStyle}" Height="30" Margin="0 5"/>
                <Button Content="Disk test benchnark" Style="{StaticResource RoundedButtonTaskBarStyle}" Height="30" Margin="0 5"/>
                <Button Content="Exit" Style="{StaticResource RoundedButtonTaskBarStyle}" Command="{StaticResource CloseAppCommand}" Height="30"  Margin="0 5"/> 
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
